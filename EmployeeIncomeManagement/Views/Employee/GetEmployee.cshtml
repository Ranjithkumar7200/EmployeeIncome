@{
}
@model List<EmployeeIncomeManagement.Models.Employee>

    <h1>All Employees</h1>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Employee Name</th>
                <th>Email ID</th>
            <th>Total Tax Amount</th>
            <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach(var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>@employee.TotalIncome</td>
            </tr>
        }
        </tbody>
    </table>

    <a asp-controller="Employee" asp-action="AddEmployee"  class="btn btn-primary">ADD Employee</a>
